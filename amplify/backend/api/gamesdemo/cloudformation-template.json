{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Metadata": {},
    "Parameters": {
        "AppSyncApiName": {
            "Type": "String",
            "Description": "The name of the AppSync API",
            "Default": "AppSyncSimpleTransform"
        },
        "DynamoDBModelTableReadIOPS": {
            "Type": "Number",
            "Description": "The number of read IOPS the table should support.",
            "Default": 5
        },
        "DynamoDBModelTableWriteIOPS": {
            "Type": "Number",
            "Description": "The number of write IOPS the table should support.",
            "Default": 5
        },
        "schemaGraphql": {
            "Type": "String",
            "Description": "The S3 location for the Schema: schema.graphql"
        },
        "QueryGetReviewRequest": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Query.getReview.request"
        },
        "QueryGetReviewResponse": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Query.getReview.response"
        },
        "QueryListReviewsRequest": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Query.listReviews.request"
        },
        "QueryListReviewsResponse": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Query.listReviews.response"
        },
        "MutationCreateReviewRequest": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Mutation.createReview.request"
        },
        "MutationCreateReviewResponse": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Mutation.createReview.response"
        },
        "MutationUpdateReviewRequest": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Mutation.updateReview.request"
        },
        "MutationUpdateReviewResponse": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Mutation.updateReview.response"
        },
        "MutationDeleteReviewRequest": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Mutation.deleteReview.request"
        },
        "MutationDeleteReviewResponse": {
            "Type": "String",
            "Description": "The S3 location for the Resolver: Mutation.deleteReview.response"
        }
    },
    "Resources": {
        "GraphQLSchema": {
            "Type": "AWS::AppSync::GraphQLSchema",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DefinitionS3Location": {
                    "Ref": "schemaGraphql"
                }
            }
        },
        "GraphQLAPI": {
            "Type": "AWS::AppSync::GraphQLApi",
            "Properties": {
                "Name": {
                    "Ref": "AppSyncApiName"
                },
                "AuthenticationType": "API_KEY"
            }
        },
        "GraphQLAPIKey": {
            "Type": "AWS::AppSync::ApiKey",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                }
            }
        },
        "ReviewTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            "Review",
                            {
                                "Fn::GetAtt": [
                                    "GraphQLAPI",
                                    "ApiId"
                                ]
                            }
                        ]
                    ]
                },
                "KeySchema": [
                    {
                        "AttributeName": "id",
                        "KeyType": "HASH"
                    }
                ],
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": {
                        "Ref": "DynamoDBModelTableReadIOPS"
                    },
                    "WriteCapacityUnits": {
                        "Ref": "DynamoDBModelTableWriteIOPS"
                    }
                },
                "StreamSpecification": {
                    "StreamViewType": "NEW_AND_OLD_IMAGES"
                }
            }
        },
        "ReviewIAMRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Join": [
                        "-",
                        [
                            "ReviewTable",
                            "role",
                            {
                                "Fn::GetAtt": [
                                    "GraphQLAPI",
                                    "ApiId"
                                ]
                            }
                        ]
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "appsync.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "DynamoDBAccess",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:BatchGetItem",
                                        "dynamodb:BatchWriteItem",
                                        "dynamodb:PutItem",
                                        "dynamodb:DeleteItem",
                                        "dynamodb:GetItem",
                                        "dynamodb:Scan",
                                        "dynamodb:Query",
                                        "dynamodb:UpdateItem"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::GetAtt": [
                                                "ReviewTable",
                                                "Arn"
                                            ]
                                        },
                                        {
                                            "Fn::Join": [
                                                "/",
                                                [
                                                    {
                                                        "Fn::GetAtt": [
                                                            "ReviewTable",
                                                            "Arn"
                                                        ]
                                                    },
                                                    "*"
                                                ]
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "ReviewDataSource": {
            "Type": "AWS::AppSync::DataSource",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "Name": "ReviewTable",
                "Type": "AMAZON_DYNAMODB",
                "ServiceRoleArn": {
                    "Fn::GetAtt": [
                        "ReviewIAMRole",
                        "Arn"
                    ]
                },
                "DynamoDBConfig": {
                    "AwsRegion": {
                        "Fn::Select": [
                            3,
                            {
                                "Fn::Split": [
                                    ":",
                                    {
                                        "Fn::GetAtt": [
                                            "ReviewTable",
                                            "Arn"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    "TableName": {
                        "Ref": "ReviewTable"
                    }
                }
            }
        },
        "GetReviewResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReviewDataSource",
                        "Name"
                    ]
                },
                "FieldName": "getReview",
                "TypeName": "Query",
                "RequestMappingTemplateS3Location": {
                    "Ref": "QueryGetReviewRequest"
                },
                "ResponseMappingTemplateS3Location": {
                    "Ref": "QueryGetReviewResponse"
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "ListReviewResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReviewDataSource",
                        "Name"
                    ]
                },
                "FieldName": "listReviews",
                "TypeName": "Query",
                "RequestMappingTemplateS3Location": {
                    "Ref": "QueryListReviewsRequest"
                },
                "ResponseMappingTemplateS3Location": {
                    "Ref": "QueryListReviewsResponse"
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "CreateReviewResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReviewDataSource",
                        "Name"
                    ]
                },
                "FieldName": "createReview",
                "TypeName": "Mutation",
                "RequestMappingTemplateS3Location": {
                    "Ref": "MutationCreateReviewRequest"
                },
                "ResponseMappingTemplateS3Location": {
                    "Ref": "MutationCreateReviewResponse"
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "UpdateReviewResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReviewDataSource",
                        "Name"
                    ]
                },
                "FieldName": "updateReview",
                "TypeName": "Mutation",
                "RequestMappingTemplateS3Location": {
                    "Ref": "MutationUpdateReviewRequest"
                },
                "ResponseMappingTemplateS3Location": {
                    "Ref": "MutationUpdateReviewResponse"
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "DeleteReviewResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReviewDataSource",
                        "Name"
                    ]
                },
                "FieldName": "deleteReview",
                "TypeName": "Mutation",
                "RequestMappingTemplateS3Location": {
                    "Ref": "MutationDeleteReviewRequest"
                },
                "ResponseMappingTemplateS3Location": {
                    "Ref": "MutationDeleteReviewResponse"
                }
            },
            "DependsOn": "GraphQLSchema"
        }
    },
    "Outputs": {
        "GraphQLAPIIdOutput": {
            "Description": "Your GraphQL API ID.",
            "Value": {
                "Fn::GetAtt": [
                    "GraphQLAPI",
                    "ApiId"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            "GraphQLApiId"
                        ]
                    ]
                }
            }
        },
        "GraphQLAPIEndpointOutput": {
            "Description": "Your GraphQL API endpoint.",
            "Value": {
                "Fn::GetAtt": [
                    "GraphQLAPI",
                    "GraphQLUrl"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            "GraphQLApiEndpoint"
                        ]
                    ]
                }
            }
        },
        "GraphQLAPIKeyOutput": {
            "Description": "Your GraphQL API key. Provide via 'x-api-key' header.",
            "Value": {
                "Fn::GetAtt": [
                    "GraphQLAPIKey",
                    "ApiKey"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            "GraphQLApiKey"
                        ]
                    ]
                }
            }
        }
    }
}